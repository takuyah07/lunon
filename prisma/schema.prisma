generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Store {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?
  addressText String?
  hoursText   String?
  isPublic    Boolean  @default(true)
  
  // テーマカラー（カスタマイズ可能）
  themePrimary   String @default("#ec4899")  // ピンク
  themeSecondary String @default("#a855f7")  // パープル
  themeAccent    String @default("#f43f5e")  // ローズ
  
  // デザイン設定
  logoUrl     String?
  bannerUrl   String?
  
  createdAt      DateTime            @default(now())
  oshis          Oshi[]
  payments       Payment[]
  giftTemplates  StoreGiftTemplate[] // 店舗共通ギフトテンプレート
}

model Oshi {
  id           String              @id @default(cuid())
  storeId      String
  store        Store               @relation(fields: [storeId], references: [id])
  name         String
  slug         String              @unique
  profileShort String?
  photoUrl     String?
  isActive     Boolean             @default(true)
  createdAt    DateTime            @default(now())
  presets      GiftPreset[]
  payments     Payment[]
  rankCache    MonthlyRankCache[]
}

model GiftPreset {
  id                  String   @id @default(cuid())
  oshiId              String
  oshi                Oshi     @relation(fields: [oshiId], references: [id])
  label               String
  amount              Int
  squareCatalogItemId String
  paymentLinkUrl      String?  // 事前生成したPayment Link（キャッシュ）
  isActive            Boolean  @default(true)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}

model Payment {
  id             String   @id @default(cuid())
  squarePaymentId String  @unique
  oshiId         String
  oshi           Oshi     @relation(fields: [oshiId], references: [id])
  storeId        String
  store          Store    @relation(fields: [storeId], references: [id])
  amount         Int
  paidAtJst      DateTime
  createdAt      DateTime @default(now())

  @@index([storeId, paidAtJst])
  @@index([oshiId, paidAtJst])
}

model MonthlyRankCache {
  id          String   @id @default(cuid())
  storeId     String
  oshiId      String
  oshi        Oshi     @relation(fields: [oshiId], references: [id])
  totalAmount Int
  monthYm     String
  refreshedAt DateTime @default(now())

  @@unique([storeId, oshiId, monthYm])
  @@index([storeId, monthYm, totalAmount])
}

// 店舗レベルの共通ギフトテンプレート
model StoreGiftTemplate {
  id                  String   @id @default(cuid())
  storeId             String
  store               Store    @relation(fields: [storeId], references: [id])
  label               String
  amount              Int
  squareCatalogItemId String
  paymentLinkUrl      String?  // キャッシュされたPayment Link
  displayOrder        Int      @default(0)
  isActive            Boolean  @default(true)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@index([storeId, displayOrder])
}
